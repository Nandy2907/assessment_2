{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true // Added for Node.js environment
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended" // For Node.js specific rules
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "node" // Added Node.js plugin for better linting in Node.js environment
  ],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "off" // Disable no-console rule to allow console statements in development
  }
}
